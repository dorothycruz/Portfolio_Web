{
	"version": "0.1.0",
	"command": "npm",
	"isShellCommand": true,
	"suppressTaskName": true,
	"tasks": [
		{
			// Build task, Ctrl+Shift+B
			// "npm install --loglevel info"
			"taskName": "install",
			"isBuildCommand": true,
			"args": [
				"install",
				"--loglevel",
				"info"
			]
		},
		{
			// Test task, Ctrl+Shift+T
			// "npm start"
			"taskName": "start",
			"isTestCommand": true,
			"args": [ "start" ]
		}
	]
}